@model IEnumerable<Auth_WebApplication.ViewModels.MultiselectVM.StudentSubjectVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <a asp-action="AddStudent" asp-controller="Multi" class="btn btn-sm btn-primary float-end m-4">Add Studnet</a>
            <table class="table table-bordered table-hover text-center">
                <thead>
                    <tr>
                        <th>Student Id</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Subject</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach(var d in Model)
                {
                    <tr>
                        <td>@d.StudnetId</td>
                        <td>@d.Name</td>
                        <td>@d.Class</td>
                        <td>@d.Subject</td>
                        <td>
                            <a class="btn btn-sm btn-danger m-1">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

