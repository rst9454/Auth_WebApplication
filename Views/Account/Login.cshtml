@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}

<form method="post" asp-action="Login" asp-controller="Account">
    <h3 class="text-muted mb-1 text-center" style="font-size:20px;">Existing User Login</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="mb-2" asp-for="Email"></label><span class="text-danger">*</span>
        <input type="email" id="email" class="form-control" asp-for="Email" autocomplete="Email" placeholder="Enter email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="mb-2" asp-for="Password"></label><span class="text-danger">*</span>
        <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Enter password" />
        <span asp-validation-for="Password"  class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>
            <input type="checkbox" id="rememberMe" asp-for="RememberMe" /> Remember Me
        </label>
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col-6">
                <a asp-action="ForgetPassword" asp-controller="Account" class="float-end btn btn-sm btn-outline-primary">Forget Password</a>
            </div>
            <div class="col-6">
                <a asp-action="ForgetUsername" asp-controller="Account" class="btn btn-sm btn-outline-primary">Forget Username</a>
            </div>
        </div>
    </div>
    <div class="d-grid">
        <button id="btnLogin" type="submit" class="btn btn-primary btn-block m-2">LogIn</button>
    </div>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />

}